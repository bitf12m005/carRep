@{
    ViewBag.Title = "Signup";
    Layout = null;
}

<html>

<body style="background:no-repeat;background-image:url(/Content/Pictures/1.jpg)">
    <div>
        <label style="font:1000;font-size:70px;font-family:'Snap ITC';color:black;margin-top:100px;margin-left:450px;">CAR INN</label>
    </div>

    <div>
        <label style="font:1000;font-size:60px;font-family:'Snap ITC';color:blanchedalmond;margin-top:100px;margin-left:500px;">Sign Up</label>
    </div>

    <div class="col-lg-5">
        <form action="/Home/Reg" class=" col-lg-5 form-inline" role="form" style="border-color:aqua chocolate;margin-top:100px;margin-left:400px">
            <div class="form-group">
                <label class="col-lg-3" for="name" style="font:1000;font-size:medium;font-family:'Snap ITC';color:antiquewhite;margin-top:100px">Username:</label>
                <input type="text" class="form-control col-lg-2" name="Username" style="font-size:medium;margin-left:100px">
            </div>
            <br />
            <div class="form-group">
                <label class="col-lg-3" for="name" style="font:1000;font-size:medium;font-family:'Snap ITC';color:antiquewhite;margin-top:100px">Name:</label>
                <input type="text" class="form-control col-lg-2" name="FullName" style="font-size:medium;margin-left:100px">
            </div>
            <br />
            <div class="form-group">
                <label for="email" class="col-lg-3" style="font:1000;font-size:medium;font-family:'Snap ITC';color:antiquewhite;margin-top:100px">Email Address:</label>
                <input type="email" class="  col-lg-2 form-control" name="Email" style="font-size:medium;margin-left:20px">
            </div>
            <br />
            <div class="form-group">
                <label for="pwd" class="col-lg-3" style="font-size:medium;font:1000;font-family:'Snap ITC';color:antiquewhite;margin-top:100px">Password:</label>
                <input type="password" class=" col-lg-2 form-control" name="Password" style="font-size:medium;margin-left:60px">
            </div>
            <br />
            <div class="form-group">
                <label for="contact" class="col-lg-3" style="font:1000;font-size:medium;font-family:'Snap ITC';color:antiquewhite;margin-top:100px">Contact:</label>
                <input type="number" class=" col-lg-2 form-control" name="Contact" style="font-size:medium;margin-left:75px">
            </div>
            <br />
            <div class="radio-inline">
                <label class="col-lg-3" style="font:1000;font-size:medium;font-family:'Snap ITC';color:antiquewhite;margin-top:100px">Gender: </label>
                <br /><label class="col-lg-2" style="font:1000;font-size:medium;font-family:'Snap ITC';color:antiquewhite;margin-top:100px">
                    <input name="Gender" value="male" type="radio" class="col-lg-2" style="font-size:medium;color:antiquewhite"> Male
                </label>
                >
                <label style="font:1000;font-size:large;font-family:'Snap ITC';color:antiquewhite;margin-top:100px">
                    <input name="Gender" value="female" type="radio" class="col-lg-2" style="font-size:medium;color:antiquewhite"> Female
                </label>
            </div>

            <br />
            <button type="submit" class="btn btn-default col-lg-2" style="font-size:medium;color:black;font-family:'Snap ITC'">GO</button>
        </form>
    </div>
    <br />
    <br />
    <br />
    <br />
    <footer class="navbar-fixed-bottom navbar-inverse">
        <div style="text-align: center; color:white" class="navbar-inverse">
            <p class="list-inline small" style="font-size:13px">Copyright &copy; 2015. Design by  Musfira Khan</p>
            <p class="list-inline small" style="font-size:13px">BITF12M005</p>

        </div>
    </footer>
</body>
</html>
